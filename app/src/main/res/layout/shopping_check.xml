<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="17dp"
            android:singleLine="true"
            android:text="小米手机"
            android:textColor="@color/break_text"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="17dp"
            android:singleLine="true"
            android:text="22.8元"
            android:textColor="#f00"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_xianhuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/tv_price"
            android:singleLine="true"
            android:text="现货"
            android:textColor="@color/break_text"
            android:textSize="17sp" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="108dp"
            android:background="@color/gray_line" />

        <TextView
            android:id="@+id/tv_baozhuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="包装"
            android:textColor="#999999" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_baozhuang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_baozhuang"
            android:layout_marginTop="14dp">

        </android.support.v7.widget.RecyclerView>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rv_baozhuang"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:background="@color/gray_line" />

        <TextView
            android:id="@+id/tv_guige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="规格"
            android:textColor="#999999" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_guige"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_guige"
            android:layout_marginTop="14dp">

        </android.support.v7.widget.RecyclerView>

