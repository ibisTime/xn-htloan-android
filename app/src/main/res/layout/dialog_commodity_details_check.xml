<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="138dp"
                android:layout_marginTop="17dp"
                android:singleLine="true"
                android:textColor="@color/break_text"
                android:textSize="17sp"
                tools:text="小米手机" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="138dp"
                android:layout_marginTop="17dp"
                android:singleLine="true"
                android:textColor="#f00"
                android:textSize="17sp"
                tools:text="22.8元" />

            <TextView
                android:id="@+id/tv_xianhuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@+id/tv_price"
                android:singleLine="true"
                android:textColor="@color/break_text"
                android:textSize="17sp"
                tools:text="现货" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="108dp"
                android:background="#000" />


            <TextView
                android:id="@+id/tv_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="规格"
                android:textColor="#999999" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexbox_spec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_guige"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp"
                app:flexWrap="wrap">

            </com.google.android.flexbox.FlexboxLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flexbox_spec"
                android:layout_marginTop="48dp">

                <include
                    android:id="@+id/buttom_layout"
                    layout="@layout/layout_product_buttom" />
            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_img"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            android:src="@mipmap/ic_clos" />


    </RelativeLayout>
</layout>
