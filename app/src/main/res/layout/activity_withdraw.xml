<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:text="持卡人"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:textSize="15sp"
                        android:textColor="@color/fontColor_gray"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_marginRight="15dp"
                        android:hint="请输入姓名"
                        android:textSize="15sp"
                        android:textColorHint="@color/fontColor_hint"
                        android:textColor="#333333"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <View
                    android:background="@color/lineColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:text="开户行"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:textSize="15sp"
                        android:textColor="@color/fontColor_gray"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/edt_bankName"
                        android:layout_marginRight="15dp"
                        android:hint="请输入开户行"
                        android:textSize="15sp"
                        android:textColorHint="@color/fontColor_hint"
                        android:textColor="#333333"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </LinearLayout>

                <View
                    android:background="@color/lineColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>


                <LinearLayout
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:text="卡号"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:textSize="15sp"
                        android:textColor="@color/fontColor_gray"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/edt_cardId"
                        android:layout_marginRight="15dp"
                        android:hint="银行卡号"
                        android:textSize="15sp"
                        android:textColorHint="@color/fontColor_hint"
                        android:textColor="#333333"
                        android:background="@null"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <View
                    android:background="@color/lineColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="120dp">

                        <TextView
                            android:text="提现金额"
                            android:textSize="15sp"
                            android:layout_marginTop="18dp"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/fontColor_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:gravity="center"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="¥ "
                                android:textSize="30sp"
                                android:textColor="#333333"
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/edt_price"
                                android:textSize="30sp"
                                android:textColor="#333333"
                                android:background="@null"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_marginLeft="15dp"
                        android:background="@color/lineColor"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp" />

                    <TextView
                        android:id="@+id/txt_canUsePrice"
                        android:text="可提现金额0.00元"
                        android:textSize="15sp"
                        android:textColor="@color/text_black_cd"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="38dp" />

                    <TextView
                        android:id="@+id/txt_tip4"
                        android:text="* 本次提现手续费:0"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/title_bg"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="支付密码"
                        android:textSize="15sp"
                        android:textColor="@color/fontColor_gray"
                        android:layout_width="127dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/edt_repassword"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="@color/fontColor_gray"
                        android:textColorHint="@color/fontColor_hint"
                        android:hint="请输入支付密码"
                        android:layout_height="match_parent" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_confirm"
                    android:gravity="center"
                    android:text="确定"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/title_bg"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="取现规则:"
                        android:textSize="12sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/title_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_tip"
                        android:text="1.每月最大取现次数为0次"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/title_bg"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_tip2"
                        android:text="2.提现金额是0的倍数，单笔最高0"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/title_bg"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_tip3"
                        android:text="3.取现手续费:"
                        android:textSize="12sp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/title_bg"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</layout>
