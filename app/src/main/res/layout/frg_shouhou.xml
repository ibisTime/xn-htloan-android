<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>

    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#F89C44"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="玩售后"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:layout_marginTop="7dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.cdkj.huatuweitong.wanfenqi.MyJzvd
                                    android:id="@+id/jz_video"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="65dp"
                                    android:layout_height="65dp"
                                    android:layout_gravity="center"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_gravity="bottom"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textColor="#ffffffff"
                                        android:textSize="14sp"
                                        />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2.5dp">

                                        <TextView
                                            android:id="@+id/tv_time"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textColor="#ffffffff"
                                            android:textSize="12sp"
                                            />

                                        <TextView
                                            android:id="@+id/tv_plays"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="0次播放"
                                            android:textColor="#ffffffff"
                                            android:textSize="12sp"
                                            />

                                    </LinearLayout>

                                </LinearLayout>

                            </FrameLayout>

                        </FrameLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="13dp"
                        android:background="@mipmap/fenqi_left"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:text="咨询专区"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="13dp"
                        android:background="@mipmap/fenqi_right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_answer"
                        android:layout_width="0dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_shouhou_zx_bg">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/shouhou_answer"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="54dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="售后问答"
                                android:textColor="#ff333333"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="咨询进度及结果"
                                android:textColor="#ff999999"
                                android:textSize="12sp"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_ask"
                        android:layout_width="0dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/shape_shouhou_zx_bg">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/shouhou_ask"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="54dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用车咨询"
                                android:textColor="#ff333333"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="咨询车辆使用等"
                                android:textColor="#ff999999"
                                android:textSize="12sp"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="· 在线客服业务范围："
                        android:textColor="#ff999999"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tv_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车辆使用，售后跟踪"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="· 在线客服工作时间工作日："
                        android:textColor="#ff999999"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tv_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9:00-24:00"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_confirm"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_std_btn"
                    android:text="客服电话"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"/>

            </LinearLayout>

        </ScrollView>


    </FrameLayout>
</layout>