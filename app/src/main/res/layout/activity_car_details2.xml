<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.cdkj.huatuweitong.module.vehicle_db.CarDetailsActivity">

            <!--<FrameLayout-->
                <!--android:background="@color/title_bg"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="44dp">-->

                <!--<ImageView-->
                    <!--android:id="@+id/iv_back"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:padding="5dp"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:src="@mipmap/back_white" />-->

                <!--<ImageView-->
                    <!--android:id="@+id/iv_collection"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="right|center_vertical"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:padding="5dp"-->
                    <!--android:src="@mipmap/icon_un_collection" />-->

            <!--</FrameLayout>-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.youth.banner.Banner
                    android:id="@+id/home_banner"
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    app:delay_time="4000"
                    app:indicator_drawable_selected="@drawable/banner_select"
                    app:indicator_drawable_unselected="@drawable/banner_un_select"
                    app:indicator_height="7dp"
                    app:indicator_margin="6dp"
                    app:indicator_width="7dp" />

                <!--<ImageView-->
                <!--android:id="@+id/iv_img"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="185dp"-->
                <!--android:scaleType="fitXY" />-->

            </FrameLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                tools:text="奔驰SUV600  加长跑车"
                android:textStyle="bold"
                android:textColor="@color/text_black_cd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                tools:text="中大型SUV"
                android:textColor="@color/text_999"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="经销价:"
                    android:textColor="@color/text_999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    tools:text="50万"
                    android:textColor="@color/title_bg"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="月供:"
                    android:textColor="@color/text_999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_monthAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    tools:text="50万"
                    android:textColor="@color/title_bg"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/ll_calculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="#33ff9402"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_calculator" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="计算器"
                        android:textSize="10sp" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:lineSpacingMultiplier="1.2"
                tools:text="智能卡,一键启动一般格式是:#AARRGGBB。AA就是透明度值(这里我透明度"
                android:textColor="@color/text_999"
                android:textSize="12sp" />

            <View
                style="@style/style_split_line_broad"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/tv_merchant"
                android:visibility="gone"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="78dp">

                    <ImageView
                        android:id="@+id/iv_merchant_avatar"
                        android:layout_width="50dp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:id="@+id/tv_merchant_name"
                        android:layout_marginLeft="6dp"
                        android:layout_width="170dp"
                        android:layout_height="20dp"
                        android:text="天津利隆国际贸易有限公司"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        />

                    <ImageView
                        android:id="@+id/iv_merchant_level"
                        android:layout_marginLeft="3dp"
                        android:layout_width="10dp"
                        android:layout_height="12dp"/>

                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="12dp"/>

                    <ImageView
                        android:background="@drawable/more_right"
                        android:layout_width="7dp"
                        android:layout_height="12dp"/>

                </LinearLayout>

                <View
                    style="@style/style_split_line_broad"
                    android:layout_height="10dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/title_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="库存信息"
                    android:textColor="@color/text_black_cd"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="车源所在地"
                    android:textColor="@color/text_999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_car_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    tools:text="杭州"
                    android:textColor="@color/text_black_cd"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                style="@style/style_split_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="手续"
                    android:textColor="@color/text_999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_procedures"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    tools:text="手续齐全"
                    android:textColor="@color/text_black_cd"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                style="@style/style_split_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="更新时间"
                    android:textColor="@color/text_999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_up_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    tools:text="2019-8-15"
                    android:textColor="@color/text_black_cd"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                style="@style/style_split_line_broad"
                android:layout_height="10dp"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/title_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="配置"
                    android:textColor="@color/text_black_cd"
                    android:textSize="16sp" />
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_car_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_car_setting_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <Button
                    android:id="@+id/btn_call"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_yellow_gary_bg"
                    android:text="打电话"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_select_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_enabled"
                    android:text="询底价"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>
