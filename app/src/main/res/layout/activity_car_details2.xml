<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fram_title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/title_bg">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/title_mid_tv"
                android:textSize="@dimen/top_center_title_size"/>

            <FrameLayout
                android:id="@+id/fl_back"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:paddingLeft="15dp">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/title_left_img_widht"
                    android:layout_height="@dimen/title_left_img_height"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/back_img"/>

                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/title_left_tv"
                    android:textSize="16sp"
                    android:visibility="gone"
                    tools:text="返回"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical">

                <FrameLayout
                    android:id="@+id/fl_like"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    >

                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="@dimen/title_img_right_width"
                        android:layout_height="@dimen/title_img_right_height"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical|right"
                        tools:src="@mipmap/ic_launcher"/>


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_share"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp">

                    <ImageView
                        android:layout_width="@dimen/title_img_right_width"
                        android:layout_height="@dimen/title_img_right_height"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical|right"
                        android:src="@mipmap/active_share"/>


                </FrameLayout>


            </LinearLayout>


        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                tools:context="com.cdkj.huatuweitong.module.vehicle_db.CarDetailsActivity">

                <!--<FrameLayout-->
                <!--android:background="@color/title_bg"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="44dp">-->

                <!--<ImageView-->
                <!--android:id="@+id/iv_back"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:padding="5dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:src="@mipmap/back_white" />-->

                <!--<ImageView-->
                <!--android:id="@+id/iv_collection"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="right|center_vertical"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:padding="5dp"-->
                <!--android:src="@mipmap/icon_un_collection" />-->

                <!--</FrameLayout>-->

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.youth.banner.Banner
                        android:id="@+id/home_banner"
                        android:layout_width="match_parent"
                        android:layout_height="185dp"
                        app:delay_time="4000"
                        app:indicator_drawable_selected="@drawable/banner_select"
                        app:indicator_drawable_unselected="@drawable/banner_un_select"
                        app:indicator_height="7dp"
                        app:indicator_margin="6dp"
                        app:indicator_width="7dp"/>

                    <!--<ImageView-->
                    <!--android:id="@+id/iv_img"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="185dp"-->
                    <!--android:scaleType="fitXY" />-->

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/text_black_cd"
                    android:textSize="16sp"
                    tools:text="奔驰SUV600  加长跑车"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/text_999"
                    android:textSize="12sp"
                    tools:text="中大型SUV"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="经销价:"
                        android:textColor="@color/text_999"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_price"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="#F84444"
                        android:textSize="16sp"
                        tools:text="50万"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="月供:"
                        android:textColor="@color/text_999"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_monthAmount"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="#F84444"
                        android:textSize="16sp"
                        tools:text="50万"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起"
                        android:textColor="@color/text_999"
                        android:textSize="12sp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:id="@+id/ll_calculator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="#33ff9402"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_calculator"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="计算器"
                            android:textSize="10sp"/>
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:padding="8dp"
                    android:background="@drawable/shape_car_detail_msg"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/text_999"
                    android:textSize="12sp"
                    tools:text="智能卡,一键启动一般格式是:#AARRGGBB。AA就是透明度值(这里我透明度"/>

                <View
                    style="@style/style_split_line_broad"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:id="@+id/ll_merchant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_merchant_avatar"
                            android:layout_width="50dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/tv_merchant_name"
                            android:layout_width="170dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="6dp"
                            android:text="天津利隆国际贸易有限公司"
                            android:textColor="#ff333333"
                            android:textSize="14sp"
                            />

                        <ImageView
                            android:id="@+id/iv_merchant_level"
                            android:layout_width="10dp"
                            android:layout_height="12dp"
                            android:layout_marginLeft="3dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="12dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="12dp"
                            android:background="@drawable/more_right"/>

                    </LinearLayout>

                    <View
                        style="@style/style_split_line_broad"
                        android:layout_height="10dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/title_bg"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:text="库存信息"
                        android:textColor="@color/text_black_cd"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:text="车源所在地"
                        android:textColor="@color/text_999"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_car_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_black_cd"
                        android:textSize="14sp"
                        tools:text="杭州"/>
                </LinearLayout>

                <View
                    style="@style/style_split_line"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:text="手续"
                        android:textColor="@color/text_999"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_procedures"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_black_cd"
                        android:textSize="14sp"
                        tools:text="手续齐全"/>
                </LinearLayout>

                <View
                    style="@style/style_split_line"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:text="更新时间"
                        android:textColor="@color/text_999"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_up_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_black_cd"
                        android:textSize="14sp"
                        tools:text="2019-8-15"/>
                </LinearLayout>

                <View
                    style="@style/style_split_line_broad"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/title_bg"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:text="配置"
                        android:textColor="@color/text_black_cd"
                        android:textSize="16sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_config"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:padding="8dp"
                    android:background="@drawable/shape_car_detail_msg"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/text_999"
                    android:textSize="12sp"
                    tools:text="智能卡,一键启动一般格式是:#AARRGGBB。AA就是透明度值(这里我透明度"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flex_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:flexWrap="wrap"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_car_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">

                </android.support.v7.widget.RecyclerView>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_car_setting_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">

                </android.support.v7.widget.RecyclerView>

                <View
                    style="@style/style_split_line_broad"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:id="@+id/ll_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/title_bg"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:text="店内推荐"
                            android:textColor="@color/text_black_cd"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_recommend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                    </android.support.v7.widget.RecyclerView>

                    <View
                        style="@style/style_split_line_broad"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/title_bg"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:text="店内动态"
                            android:textColor="@color/text_black_cd"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_active"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                    </android.support.v7.widget.RecyclerView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <Button
                        android:id="@+id/btn_call"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_red_gary_bg"
                        android:text="打电话"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                    <Button
                        android:id="@+id/btn_select_price"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/btn_bg_enabled"
                        android:text="询底价"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</layout>
