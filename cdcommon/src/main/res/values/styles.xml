<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //tabyout

    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tablayout_select</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/tablayout_select</item>
    </style>

    <!--Tablayout 字体大小-->
    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <!--弹框styles设置-->
    <style name="TipsDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景不变暗 -->
    </style>

    <!--所有编辑框公用属性设置-->
    <style name="style_edit">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--加载框-->
    <style name="LoadingDialogLight" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 屏幕背景不变暗 -->
    </style>

    <!--短的分割线styles设置-->
    <style name="style_split_vline">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!--长的分割线styles设置-->
    <style name="style_split_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line_gray_cd</item>
    </style>

    <!--长的分割线styles设置-->
    <style name="style_split_line_broad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/line_color_broad</item>
    </style>

    <!--activity_share dialog style--><!--android:Theme.Dialog-->
    <style name="ActivityDialogStyleBottom" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimBottomA</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>

        <!--设置状态栏颜色-->
        <item name="colorPrimaryDark">@android:color/transparent</item>

        <!-- 模糊 -->
    </style>


    //底部弹出动画

    <style name="AnimBottomA" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/pop_bottom_in</item>
        <!--<item name="android:windowExitAnimation">@anim/pop_bottom_out</item>-->
    </style>

    <!--pop渐变动画-->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/pop_alpha_out</item>
    </style>


    <attr name="LoadingViewStyle" format="reference" />
    <declare-styleable name="LoadingView">
        <attr name="loading_view_size" format="dimension" />
        <attr name="loading_view_color" format="color" />
    </declare-styleable>

    <style name="TipDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="transparenStyle" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
        <item name="colorPrimaryDark">@android:color/transparent</item>

    </style>

    <declare-styleable name="ExpandableTextLayout">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandDrawable" format="reference" />
        <attr name="collapseDrawable" format="reference" />
    </declare-styleable>

    <!--viewpager 指示器-->
    <declare-styleable name="viewPagerIndicatorStyle">
        <attr name="choose_color" format="reference"></attr>//选中状态状态颜色
    </declare-styleable>





</resources>
