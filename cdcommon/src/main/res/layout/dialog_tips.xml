<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_tips_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_tips_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tips_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:textColor="@color/dialog_tips_title_txt"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/dialog_tips_content_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical|left"
        android:textColor="@color/dialog_tips_content_txt"
        android:textSize="14sp" />

    <View
       style="@style/style_split_line"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_tips_negative_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="43dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/dialog_tips_negative_btn_sel"
            android:gravity="center"
            android:textColor="@color/dialog_tips_negative_btn_txt"
            android:textSize="17sp" />

        <View
            android:id="@+id/dialog_tips_divider_left_line"
            style="@style/style_split_vline"
            android:minHeight="40dp"
            />

        <Button
            android:id="@+id/dialog_tips_middle_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="43dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/dialog_tips_middle_btn_sel"
            android:gravity="center"
            android:textColor="@color/dialog_tips_positive_btn_txt"
            android:textSize="17sp" />

        <View
            android:id="@+id/dialog_tips_divider_right_line"
            style="@style/style_split_vline"
            android:minHeight="40dp"
            />

        <Button
            android:id="@+id/dialog_tips_positive_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="43dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/dialog_tips_positive_btn_sel"
            android:gravity="center"
            android:textColor="@color/dialog_tips_negative_btn_txt"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>