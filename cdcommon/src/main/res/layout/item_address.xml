<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        style="@style/style_split_line"
        android:layout_height="10dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:textColor="@color/fontColor_gray"
            android:textSize="14sp"
            tools:text="姓名姓名" />

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_left_right_interval"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/fontColor_gray"
            android:textSize="14sp"
            tools:text="18984955240" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/layout_left_right_interval"
        android:paddingRight="@dimen/layout_left_right_interval"
        android:paddingTop="10dp"
        android:textColor="@color/fontColor_gray"
        android:textSize="14sp"
        tools:text="浙江省 杭州市 余杭区 仓前街道仓艺绿原63栋2单元1401仓前街道仓艺绿原63栋2单元1401" />

    <View style="@style/style_split_line" />

    <LinearLayout
        android:id="@+id/real_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_choose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/layout_left_right_interval"
            android:layout_marginRight="10dp"
            android:background="@drawable/pay_no" />

        <TextView
            android:id="@+id/tv_is_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:text="默认地址"
            android:textColor="@color/text_black_cd"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <LinearLayout
            android:id="@+id/layout_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/address_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="编辑"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/address_delete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="删除"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>